 	 </select>
 	 
 	  <select id="adminGoodsAccList" resultType="goodsDto">
 	 SELECT * FROM GOODS
 	 WHERE GCTGY = '악세사리'
 	 </select>
 	 
 	 <select id="goodsSelect" resultType="goodsDto">
 	 SELECT * FROM GOODS
 	 WHERE GCTGY = #{gCtgy}
 	 </select>
 	 
